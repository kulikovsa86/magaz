!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Magaz
    = stylesheet_link_tag    "magaz/application", media: "all"
    = javascript_include_tag "magaz/application"
    = csrf_meta_tags
  %body
    .container
      .row
        .col-md-4.col-md-offset-4
          .login-panel.panel.panel-default
            .panel-heading
              %h3.panel-title Авторизация
            .panel-body
              = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
                %fieldset
                  .form-group
                    = f.email_field :email, placeholder: "E-mail  ", autofocus: true, class: "form-control"
                  .form-group
                    = f.password_field :password, placeholder: "Пароль", autocomplete: "off", class: "form-control"
                  .checkbox
                    %label
                      = f.check_box :remember_me
                      Запомнить меня
                = f.submit "Войти", class: "btn btn-lg btn-success btn-block"
