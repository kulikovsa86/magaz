- if notice
  .alert.alert-success= notice

.panel.panel-default
  .panel-heading
    %h4.panel_header= t('.title')
  .panel-body
    %table.table.table-condensed
      %thead
        %tr
          %th.code_column= Magaz::Payment.human_attribute_name(:code)
          %th= Magaz::Payment.human_attribute_name(:name)
          %th= Magaz::Payment.human_attribute_name(:note)
      %tbody
        - @payments.each do |payment|
          %tr
            %td= payment.code
            %td= link_to payment.name, edit_payment_path(payment)
            %td= payment.note
%br
= link_to t('helpers.link_to.new', model: Magaz::Payment.model_name.human), new_payment_path