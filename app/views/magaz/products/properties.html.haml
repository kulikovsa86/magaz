
= render '/magaz/categories/breadcrumb'

.panel.panel-default
  .panel-heading
    = render "/magaz/common/product_header", product: @product
  .panel-body
    = render 'tabs'
    %br
      = form_tag(product_properties_create_path(@product), {class: 'form-horizontal'}) do
        = render '/magaz/property_values/form', modification_name: @product.var_name, obj: @product
        = submit_tag t('helpers.submit.save'), class: 'btn btn-success'
        = render 'iter_group', tab: 'prop'
          