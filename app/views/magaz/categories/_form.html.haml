= bootstrap_form_for @category do |f|
  - if @category.errors.any?
    = f.alert_message t('errors.template.header', count: @category.errors.count)
  - if @parent_category
    = hidden_field_tag :parent, @parent_category.permalink

  = f.text_field :code
  = f.text_field :name
  = f.text_area :description
  / = f.check_box :hidden
  = label_tag Magaz::Category.human_attribute_name(:hidden)
  = f.check_box :hidden, :label => '', :'data-on-text' => 'ДА', :'data-off-text' => 'НЕТ', :'data-size' => 'mini', class: 'switcher'
  %br
  = label_tag Magaz::Category.human_attribute_name(:properties)
  = f.collection_select :property_ids, Magaz::Property.all, :id, :name, { hide_label: true }, {class: 'selectpicker', multiple: true, :'data-width'=> "400px", :'data-selected-text-format' => "count>3"}
  %br
  = f.submit t('helpers.submit.save'), class: 'btn btn-success'
  - unless @category.new_record?
    = link_to t('helpers.link_to.destroy'), @category, method: :delete, data: {confirm: "Вы уверены, что хотите удалить категорию? <br/>Все дочерние категории и товары будут также удалены"}, class: 'btn btn-default btn-danger pull-right'
