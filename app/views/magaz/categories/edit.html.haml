
= render 'breadcrumb'

.panel.panel-default
  .panel-heading
    %h4.panel_header
      - unless @category.name.empty?
        = @category.name
      - else
        = t('.default_header')

  .panel-body
    = render 'tabs'
    %br
    = render 'form'

= link_to t('helpers.link_to.back'), categories_path(@parent_category)
