.actions.btn-group
  %button.btn.btn-default.dropdown-toggle.btn-xs{:'data-toggle' => 'dropdown'}
    %i.fa.fa-bars
  %ul.dropdown-menu
    - if defined? edit
      %li
        = link_to edit do
          %i.fa.fa-pencil.fa-fw
          = t('magaz.common.edit')
      %li.divider{role: 'separator'}
    - if defined? up
      %li
        = link_to up, method: :patch do
          %i.fa.fa-arrow-up.fa-fw
          = t('magaz.common.higher')
    -if defined? down
      %li
        = link_to down, method: :patch do
          %i.fa.fa-arrow-down.fa-fw
          = t('magaz.common.lower')
    -if defined?(up) || defined?(down)
      %li.divider{role: 'separator'}
    - if defined? target
      %li
        = link_to target, method: :delete, data: {confirm: defined?(confirm) ? confirm : nil} do
          %i.fa.fa-trash.fa-fw
          = t('helpers.link_to.destroy')