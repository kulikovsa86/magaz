= form_for([@product, @variant], html: {class: 'form-horizontal'}) do |f|
  - if @variant.errors.any?
    = f.alert_message t('errors.template.header', count: @variant.errors.count)

  .form-group
    = label_tag 'var_price', Magaz::Product.human_attribute_name(:price), class: 'col-sm-4 control-label'
    .col-sm-8
      = text_field_tag :var_price, @variant.price, class: 'form-control', id: 'var_price'
  = render '/magaz/property_values/form'

  %hr
  .panel.panel-default
    .panel-heading
      %h5.panel_header= t('.images')
    .panel-body
      .alert.alert-info{role: 'alert'}
        = t('.select')
      = f.select :image_ids, @options, {hide_label: true}, {multiple: 'multiple', class: 'image-picker'}

  = f.submit t('helpers.link_to.add'), class: 'btn btn-success'

