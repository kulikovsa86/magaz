- if notice
  .alert.alert-success= notice

= render '/magaz/categories/breadcrumb'

.panel.panel-default
  .panel-heading
    %h4.panel_header= @product.name

  .panel-body
    = render '/magaz/products/tabs'
    %br
    %table.editable_table.table.table-hover
      %thead
        %tr
          %th.serial_number_column N
          %th.th_actions
          %th.price_column= Magaz::Product.human_attribute_name(:price)
          %th= t('.characteristics')
          %th= t('magaz.common.gallery')
          %th= t('.colors')
      %tbody
        - @product.variants.each_with_index do |variant, index|
          %tr
            %td= index + 1
            %td.td_actions
              = render '/magaz/common/dropdown_menu', target: variant, confirm: "Вы уверены, что хотите удалить вариант товара?"
              / .actions.btn-group
              /   %button.btn.btn-default.dropdown-toggle.btn-xs{:'data-toggle' => 'dropdown'}
              /     %i.glyphicon.glyphicon-menu-hamburger
              /   %ul.dropdown-menu
              /     %li= link_to t('helpers.link_to.destroy'), variant, method: :delete, data: {confirm: "Вы уверены, что хотите удалить вариант товара?"}
            %td= variant.price
            %td= variant.values_string
            %td
              - variant.images.each do |image|
                = link_to image.picture.url, {:'data-lightbox' => variant.id} do
                  = image_tag(image.picture.url, class: 'variant-index-image img-rounded img-thumbnail')
            %td= variant.colors_string.html_safe

               
    %br
    = link_to t('helpers.link_to.new_f', model: Magaz::Variant.model_name.human), new_product_variant_path(@product)

= link_to t('helpers.link_to.back'), edit_product_path(@product)
