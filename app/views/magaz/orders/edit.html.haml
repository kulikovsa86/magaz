
.panel.panel-default
  .panel-heading
    %h4.panel_header= t('.title', num: @order.num)
  .panel-body
    = render 'undertitle_links'
    %br
    - if @form
      = render @form
    - else
      = render 'form'

%br
= link_to t('helpers.link_to.back'), orders_path(filter: 'opened')
\|
= link_to t('helpers.link_to.destroy'), @order, method: :delete, data: { confirm: 'Вы уверены, что хотите удалить данный заказ?' }